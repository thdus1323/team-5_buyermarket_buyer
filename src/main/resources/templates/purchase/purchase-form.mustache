{{> layout/header}}
<div class="d-flex justify-content-center" style="margin-top: 100px; margin-bottom: 100px;">
    <form action="/purchase/save" method="post">
        <div class="p-3 m-3" style="width: 300px;">
            <div class="mb-3 mt-3">

                상 품 ID : <input name="productId" type="text" class="form-control" value="{{product.productId}}" readonly>
            </div>
            <div class="mb-3 mt-3">
                상 품 명 : <input name="productName" type="text" class="form-control" value="{{product.productName}}" readonly>
            </div>
            <div class="mb-3 mt-3">
                상품가격 : <input name="productPrice" type="number" class="form-control" value="{{product.productPrice}}" readonly>
            </div>
            <div class="mb-3 mt-3">
                상품수량 : <input name="productQty" type="number" class="form-control" value="{{product.productQty}}" readonly>
            </div>

            <style>
                .wide-button {
                    width: 350px;
                    background-color: lightpink;
                    color:white;
                    border-color: lightpink;
                    border-radius: 10px;
                    font-weight: bold;
                }

            </style>

            <label for="purQty">구매 수량</label>
            <input type="number" id="purQty" name="purQty">
            <br><br><br>
            <div class="d-flex justify-content-center">
                <button type="submit" class="wide-button">구매결정</button>
                <br>
            </div>
        </div>
    </form>
</div>
{{> layout/footer}}